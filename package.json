{
  "main": "./dist/extension.cjs",
  "module": "index.ts",
  "dependencies": {
    "@ai-sdk/deepseek": "^0.1.5",
    "@ai-sdk/openai": "^1.1.4",
    "@types/node": "^22.10.10",
    "@types/vscode": "^1.86.0",
    "add": "^2.0.6",
    "ai": "^4.1.7",
    "dotenv": "^16.4.7",
    "openai": "^4.80.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vscode/vsce": "^2.23.0",
    "esbuild": "^0.20.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "echo 'Open this directory in VSCode and then run your extension with F5 or `Run and Debug > Run Extension`!'",
    "build": "bun run ./scripts/build-with-esbuild.ts",
    "watch": "bun run ./scripts/watch-with-esbuild.ts",
    "vsce-package": "bun run vsce package",
    "package": "bun run build && bun run vsce-package",
    "clean": "rm -r ./dist"
  },
  "//": "START EXTENSION ATTRIBUTES",
  "name": "explain-o-matic",
  "version": "0.0.1",
  "description": "LLM code got you down? Explain-o-matic is here to help!",
  "displayName": "Explain-o-matic",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOURNAME/code-review-companion"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeReview.start",
        "title": "Review Code Changes"
      },
      {
        "command": "codeReview.next",
        "title": "Next Section"
      },
      {
        "command": "codeReview.previous",
        "title": "Previous Section"
      },
      {
        "command": "codeReview.stop",
        "title": "Stop Review"
      },
      {
        "command": "codeReview.jumpToSection",
        "title": "Jump to Section"
      },
      {
        "command": "codeReview.breakdownSection",
        "title": "Breakdown Section"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "codeReview.breakdownSection",
          "when": "view == codeReviewSections && viewItem == section"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "codeReview.sections",
          "name": "Explain-o-matic"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.86.0"
  }
}
